<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>VetSplet</title>

    <script>
      function login() { window.location.href = "./stranka"; }
    </script>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      type="text/css"
      href="/styles/stylesLoginStranka.css"
    />
  </head>
  <body>
    <div id="vetSplet">
      <img class="logo" src="/logos/VetSpletLogo-01.png" alt="VetSplet Logo" />
      <span style="color:#3EBDAE">Vet</span><span
        style="color:#F3E38B"
      >Splet</span>
    </div>
    <form>
      <div class="row g-0 row-cols-lg-2 row-cols-sm-1 row-cols-1">
        <div class="col">
          <label
            for="basic-url1"
            class="form-label ime"
            style="display: inline"
          >Ime:</label>
          <input
            type="text"
            class="form-control center-block"
            id="basic-url1"
          />
        </div>
        <div class="col">
          <label
            for="basic-url2"
            class="form-label priimek"
            style="display: inline"
          >Priimek:</label>
          <input
            type="text"
            class="form-control center-block"
            id="basic-url2"
          />
        </div>
      </div>
    </form>
    <div class="mb-3">
      <label for="basic-url3" class="form-label">Uporabniško ime:</label>
      <input type="text" class="form-control center-block" id="basic-url3" />
    </div>
    <div class="mb-3">
      <label for="basic-url4" class="form-label">E-mail:</label>
      <input type="email" class="form-control center-block" id="basic-url4" />
    </div>
    <div class="mb-3">
      <label for="basic-url5" class="form-label">Telefonska številka:</label>
      <input type="text" class="form-control center-block" id="basic-url5" />
    </div>
    <div class="mb-3">
      <label for="basic-url7" class="form-label">Geslo:</label>
      <input
        type="password"
        class="form-control center-block"
        id="basic-url7"
      />
    </div>
    <div class="mb-3">
      <label for="basic-url8" class="form-label">Potrdite geslo:</label>
      <input
        type="password"
        class="form-control center-block"
        id="basic-url8"
      />
    </div>
    <button
      type="submit"
      onclick="login()"
      class="btn btn-primary"
    >Nadaljuj</button>
  </body>
</html>